---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  image?: string;
  articleDate?: Date;
  articleTags?: string[];
}

const { title, description, image, articleDate, articleTags } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title={title}
      description={description}
      image={image}
      articleDate={articleDate}
      articleTags={articleTags}
    />
    <slot name="head" />
  </head>
  <body>
    <Header />
    <main class="main">
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style>
  .main {
    flex: 1;
    width: 100%;
    max-width: var(--wide-width);
    margin: 0 auto;
    padding: var(--space-xl) var(--space-lg);
  }
</style>
